<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Pagamento.PagamentoActivity">
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">
        <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:stretchColumns="1"

        >
            <TextView
                    android:id="@+id/valorPagamento"
                    android:text="Pagamento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="36sp"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@android:color/black"
                    android:background="#ccddff"
                    android:gravity="center"
                    android:padding="30dp"/>

            <TextView
                    android:id="@+id/Pag"
                    android:text="Formas de Pagamento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="26sp"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="30dp"
                    android:padding="15dp"
                    android:textStyle="bold"/>

            <LinearLayout
                    android:id="@+id/linearLayoutExample"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="30dp"
                    android:layout_margin="10dp"
            >

                <ImageView
                        android:id="@+id/ranking_prod_pic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:contentDescription="@string/app_name"
                        android:scaleType="centerCrop"
                        android:background="@mipmap/iconcreditcard"/>

                <TextView

                        android:text="Cartão de Credito"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="25sp"
                        android:fontFamily="sans-serif-light"
                        android:textColor="@android:color/black"
                        android:scaleType="centerCrop"
                        android:gravity="center"
                />

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/linearLayoutCD"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="30dp"
                    android:layout_margin="10dp"
            >

                <ImageView
                        android:id="@+id/ranking_prod"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:contentDescription="@string/app_name"
                        android:scaleType="centerCrop"
                        android:background="@mipmap/debito"/>

                <TextView

                        android:text="Cartão de Debito"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="25sp"
                        android:fontFamily="sans-serif-light"
                        android:textColor="@android:color/black"
                        android:scaleType="centerCrop"
                        android:gravity="center"
                />

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/linearLayoutDin"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="30dp"
                    android:layout_margin="10dp"
            >

                <ImageView
                        android:id="@+id/rankin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:contentDescription="@string/app_name"
                        android:scaleType="centerCrop"
                        android:background="@mipmap/dinheiro"/>

                <TextView

                        android:text="Dinheiro"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="25sp"
                        android:fontFamily="sans-serif-light"
                        android:textColor="@android:color/black"
                        android:scaleType="centerCrop"
                        android:gravity="center"
                />

            </LinearLayout>

        </TableLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>